<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Doc Type:"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/headertextsize"></TextView>
                        <TextView
                            android:id="@+id/tv_doc_type_approval_line"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=""
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="@dimen/minnormaltextsize"></TextView>

                        <TextView
                            android:id="@+id/tv_approve_id_approval_line"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="@dimen/minnormaltextsize"></TextView>

                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Approve code:"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normaltextsize"></TextView>
                        <TextView
                            android:id="@+id/tv_approve_code_approval_line"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.1"
                            android:text=""
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="@dimen/minnormaltextsize"></TextView>

                        <ImageView
                            android:id="@+id/img_arrrow_forward_approval_line"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_pink_24dp"></ImageView>


                    </TableRow>
                    <TableRow
                        android:layout_marginRight="55dp"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tv_approval_date_po_header_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="@dimen/minnormaltextsize"></TextView>



                    </TableRow>



                </TableLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray1"
    android:layout_marginTop="3dp"></View>

            </LinearLayout>




        </androidx.cardview.widget.CardView>




    </LinearLayout>


</LinearLayout>