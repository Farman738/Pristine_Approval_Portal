<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


<!--    android:paddingBottom="@dimen/activity_vertical_margin"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/login_bk_sidemenu"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_imageview"
                android:layout_width="100dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="100dp"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shadow"
                android:contentDescription="@string/nav_header_desc"
                app:srcCompat="@drawable/belle_avtar" />
            <TextView
                android:id="@+id/tv_header_tittle_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:fontFamily="@font/product_sans_bold"></TextView>

            <ImageView
                android:id="@+id/imgae_view_home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_house_white_24dp"></ImageView>
        </LinearLayout>
<!--        <TextView-->
<!--            android:id="@+id/tv_header_tittle_person_name"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:paddingTop="@dimen/nav_header_vertical_spacing"-->
<!--            android:text=""-->
<!--            android:textColor="@color/white"-->
<!--            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />-->

        <TextView
            android:id="@+id/tv_header_tittle_person_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="5dp"/>

    </LinearLayout>



</LinearLayout>